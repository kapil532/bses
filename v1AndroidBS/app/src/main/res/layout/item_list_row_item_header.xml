<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:id="@+id/header_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listing near"
        android:textColor="@color/brandColor"
        android:id="@+id/location"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:ellipsize="none"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/view2"
        android:layout_toStartOf="@+id/view2" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:elevation="12dp"
        android:background="@color/white"
        android:id="@+id/view3"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        android:shape="rectangle"
        app:cardElevation="10dp"
        app:cardCornerRadius="3dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:thicknessRatio="1.9">
        <LinearLayout
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Filter"
            android:textColor="@color/tab_selected"
            android:id="@+id/filter_tag"
            android:singleLine="true"
            android:textSize="16sp"
            android:gravity="center_vertical"
            />
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/filter"
            android:src="@drawable/ic_filter_orange_24dp"
           >
        </ImageView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:elevation="10dp"
        android:layout_toLeftOf="@+id/view3"
        android:background="@color/white"
        android:layout_gravity="center_vertical"
        android:id="@+id/view2"
        app:cardCornerRadius="15dp"
        android:innerRadius="0dp"

        android:shape="ring"
        android:layout_centerVertical="true"
        app:cardElevation="5dp"
        android:thicknessRatio="1.9">

        <ImageView
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:id="@+id/location_arrow"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"

            >
        </ImageView>
    </android.support.v7.widget.CardView>



</RelativeLayout>



