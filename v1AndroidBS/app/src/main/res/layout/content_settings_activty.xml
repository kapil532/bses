<?xml version="1.0" encoding="utf-8"?>


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_below="@+id/product_detail_tool_bar"
        android:layout_above="@+id/product_detail_button_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:context="com.langoor.app.blueshak.settings.SettingsActivty"
        tools:showIn="@layout/activity_settings_activty"
        android:background="@color/light_grey"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_grey"
            android:orientation="vertical"
            >
            <android.support.v7.widget.CardView
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="2dp"
                android:background="@color/white"
                card_view:contentPadding="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/currency_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/currency_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Currency"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:textSize="@dimen/profile_text_size"   android:padding="15dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight=".5"
                            />
                        <TextView
                            android:id="@+id/price_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="AUD"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:textColor="@color/black"
                            android:textSize="@dimen/profile_text_size"
                            android:padding="15dp"

                            android:layout_weight=".5"
                            />
                    </LinearLayout>
                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="@color/light_grey"/>



                        <TextView
                            android:id="@+id/notifications"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="Notifications"
                            android:gravity="left"
                            android:padding="15dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/profile_text_size"
                            android:layout_marginRight="20dp"
                            />




                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                card_view:cardPreventCornerOverlap="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                card_view:contentPadding="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/about_us"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:text="About us"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".5"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="@dimen/profile_text_size"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />



                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="@color/light_grey"/>



                        <TextView
                            android:id="@+id/support"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:text="Support"
                            android:padding="15dp"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:textSize="@dimen/profile_text_size"
                            android:layout_marginRight="20dp"
                            />
                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="@color/light_grey"/>


                        <TextView
                            android:id="@+id/privacy_policy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".75"
                            android:text="Privacy Policy"
                            android:visibility="gone"
                            android:layout_gravity="center_vertical"
                            android:gravity="left"
                            android:padding="15dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/profile_text_size"
                            android:layout_marginRight="20dp"
                            />

                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="@color/light_grey"/>

                        <TextView
                            android:id="@+id/terms_of_use"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Terms of Use"
                            android:gravity="left"
                            android:visibility="gone"
                            android:textColor="@color/black"
                            android:textSize="@dimen/profile_text_size"   android:padding="15dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight=".75"
                            />
                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="@color/light_grey"/>

                    <TextView
                        android:id="@+id/open_source_libraries"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Open Source Libraries"
                        android:gravity="left"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:textSize="@dimen/profile_text_size"
                        android:padding="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight=".75"
                        />
                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="@color/light_grey"/>

                    <TextView
                        android:id="@+id/feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Leave Feedback"
                        android:gravity="left"
                        android:textColor="@color/black"
                        android:textSize="@dimen/profile_text_size"
                        android:padding="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight=".75"
                        />

                    <View
                        android:layout_height="1dp"
                        android:layout_width="match_parent"
                        android:background="@color/light_grey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/update_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/app_update"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Blueshak 1.0.0"
                            android:gravity="left"
                            android:textColor="@color/black"
                            android:textSize="@dimen/profile_text_size"   android:padding="15dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight=".5"
                            />
                    <TextView
                        android:id="@+id/please_update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please Update"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:textColor="@color/black"
                        android:textSize="@dimen/profile_text_size"   android:padding="15dp"

                        android:layout_weight=".5"
                        />
                    </LinearLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>
            <Button
                android:layout_margin="25dp"
                android:id="@+id/sign_out"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textAppearance="@style/MediumText"
                android:textColor="@color/white"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:background="@drawable/button_item_detail"
                android:text="Sign out"/>

        </LinearLayout>


    </ScrollView>



