            layout="@layout/horizontal_list_items_row"
            ></include>


        </LinearLayout>-->
    </LinearLayout>

    <FrameLayout
        android:id="@+id/similar_products_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>

</android.support.v7.widget.CardView>