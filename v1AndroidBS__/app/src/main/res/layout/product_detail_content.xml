<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"

    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    card_view:contentPadding="0dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_margin="10dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/product_detail_name_tv"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left|center"
            android:layout_height="wrap_content"
            android:textAppearance="@style/LargeText"
            android:textColor="@color/black"
            android:text="HP Laptopkj"/>
        <LinearLayout
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/shippable_content"
                android:layout_toStartOf="@+id/shippable_content"
                >
                <ImageView
                    android:id="@+id/list_row_item_sale_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/garage_sale_name"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Garage Sale"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/shippable_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/pick_up_content"
                android:layout_toStartOf="@+id/pick_up_content">
                <ImageView
                    android:id="@+id/list_row_item_delivery_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_marginRight="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/shippable_sale_name"
                    android:text="Shippable"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/pick_up_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"

                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/list_row_item_pick_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:id="@+id/pick_up_name"
                    android:text="Pick Up"
                    android:textColor="@color/grey_2"
                    />
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
      >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/product_detail_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/LargeText"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="$ 4,500"/>
            <TextView
                android:id="@+id/product_detail_negotiable_tv"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:layout_gravity="left|center"
                android:layout_height="wrap_content"
                android:textAppearance="@style/LargeText"
                android:textColor="@color/black"
               android:textSize="12sp"
                android:text="Non nagotiable"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"

               >

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="right|center"
                    android:src="@drawable/bg_circle" />
                <TextView
                    android:id="@+id/product_detail_available_tv"
                    android:layout_width="wrap_content"
                    android:layout_weight="4"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:textAppearance="@style/MediumText"
                    android:textColor="@color/availability_light_green"
                    android:textStyle="bold"
                    android:text="Available"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/product_retail_price"
                android:layout_width="wrap_content"
                android:layout_gravity="left|center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textAppearance="@style/LargeText"
                android:textColor="@color/black"
                android:text="$ 4,500"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_gravity="left|center"
                android:layout_height="wrap_content"
                android:textAppearance="@style/LargeText"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:text="Retail Price"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/product_detail_inappropirate_tv"
                android:layout_width="wrap_content"
                android:layout_gravity="left|center"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textAppearance="@style/MediumText"
                android:textColor="@color/black"
                android:text="Mark as Inappropriate"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/product_detail_shippable_tv"
                android:layout_width="wrap_content"
                android:layout_gravity="center|right"
                android:gravity="right"
                android:textSize="13sp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:textAppearance="@style/MediumText"
                android:textColor="@color/black"
                android:text="Shipping Availability 4546"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/product_detail_inappropirate_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <EditText
                android:id="@+id/product_detail_mark_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/app_fontColor"
                android:hint="Mark Inappropriate"
                android:maxEms="10"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:minLines="6"
                android:gravity="start|left"
                android:background="@drawable/rounder_corner_text_bg"/>

            <Button
                android:id="@+id/product_detail_markButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:padding="10dp"
                android:text="@string/markAsInappropirate"
                android:textColor="@color/white"
                android:textAppearance="@style/MediumText"
                android:background="@color/orange"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/line_separator_color"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_gravity="left|center"
                android:layout_height="wrap_content"
                android:textAppearance="@style/MediumText"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Date Listed"/>
            <TextView
                android:id="@+id/product_detail_date_tv"
                android:layout_width="match_parent"
                android:layout_gravity="left|center"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:textAppearance="@style/MediumText"
                android:textColor="@color/black"
                android:text="1st August"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_gravity="left|center"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/MediumText"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:text="Category"/>
            <TextView
                android:id="@+id/product_detail_category_tv"
                android:layout_width="match_parent"
                android:layout_gravity="left|center"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:textAppearance="@style/MediumText"
                android:textColor="@color/black"
                android:text="Laptops and Computers"/>

        </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:background="@color/line_separator_color"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="left|center"
                        android:src="@drawable/ic_rating_off"
                        android:id="@+id/rating_image1"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="left|center"
                        android:src="@drawable/ic_rating_off"
                        android:id="@+id/rating_image2"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="left|center"
                        android:src="@drawable/ic_rating_off"
                        android:id="@+id/rating_image3"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="left|center"
                        android:src="@drawable/ic_rating_off"
                        android:id="@+id/rating_image4"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="left|center"
                        android:src="@drawable/ic_rating_off"
                        android:id="@+id/rating_image5"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/reviews_rating_count"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="left|center"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/MediumText"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="0 Reviews"/>


             </LinearLayout>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="left|center"
                android:src="@drawable/right_back"
                android:id="@+id/got_to_review_ratings"/>
        </LinearLayout>
            </LinearLayout>
