<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/app_color_background">

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="@dimen/horizontal_portrait_width"
        android:layout_height="@dimen/horizontal_portrait_height"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="0dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:background="@color/app_color_background"
                android:layout_above="@+id/horizontal_list_item_item_info_layout">
                <ImageView
                    android:id="@+id/horizontal_list_item_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_pic"
                   />

            </LinearLayout>



            <RelativeLayout
                android:id="@+id/horizontal_list_item_item_info_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <!--<TextView
                    android:id="@+id/horizontal_list_item_text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/similarProducts"
                    android:textAppearance="@style/SmallText"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal" />-->

                <TextView
                    android:id="@+id/horizontal_list_item_text_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="$750"
                    android:textColor="@color/tab_selected"
                    android:padding="5dp"
                    android:textAppearance="@style/SmallText"
                    android:gravity="center_horizontal" />

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
