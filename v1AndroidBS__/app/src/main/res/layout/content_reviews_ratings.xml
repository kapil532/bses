<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:progressActivity="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/light_grey"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.langoor.app.blueshak.reviews_rating.ReviewsRatings"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:contentPadding="10dp"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="true"
          >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent">
                <com.langoor.app.blueshak.helper.RoundedImageView
                    android:id="@+id/rounde_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/placeholder_background"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    </com.langoor.app.blueshak.helper.RoundedImageView>
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/seller_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textAppearance="@style/LargeText"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="Manu"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    >

                  <LinearLayout
                            android:orientation="horizontal"
                      android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="left|center"
                                android:src="@drawable/ic_rating_off"
                                android:id="@+id/rating_image1"/>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="left|center"
                                android:src="@drawable/ic_rating_off"
                                android:id="@+id/rating_image2"/>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="left|center"
                                android:src="@drawable/ic_rating_off"
                                android:id="@+id/rating_image3"/>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="left|center"
                                android:src="@drawable/ic_rating_off"
                                android:id="@+id/rating_image4"/>
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="left|center"
                                android:src="@drawable/ic_rating_off"
                                android:id="@+id/rating_image5"/>
                        </LinearLayout>
                    <RatingBar
                        android:layout_gravity="center"
                        style="?android:attr/ratingBarStyleSmall"
                        android:id="@+id/ratingBar1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:rating="5"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="10dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="2dp"
        android:id="@+id/write_review_content"
        card_view:cardUseCompatPadding="true"
        android:visibility="gone"
        >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/white"

        android:layout_height="match_parent">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/review"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_2"
            android:backgroundTint="@color/brandColor"
            android:hint="Write your review..."/>
        <Button
            android:layout_width="200dp"
            android:layout_marginTop="5dp"
            android:id="@+id/sumbit_ratings1"
            android:layout_below="@+id/linearLayout2"
            android:layout_height="@dimen/login_btn_height"
            android:layout_gravity="right"
            android:textColor="#ffffff"
            android:background="@color/darkorange"
            android:textAllCaps="false"
            android:textSize="@dimen/login_btn_textsize"
            android:textStyle=""
            android:text="Submit"
            android:layout_alignParentLeft="true"
            />
    </LinearLayout>
    </android.support.v7.widget.CardView>


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No reviews found"
                android:textSize="16sp"
                android:id="@+id/no_sales"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ListView
                android:id="@+id/reviews_rating_list_view"
                android:layout_width="match_parent"
                android:layout_height="362dp"
                android:choiceMode="singleChoice"
                android:divider="@drawable/list_divider"
                android:dividerHeight="5dp"
                android:scrollbars="none"
                android:footerDividersEnabled="true" />


        </RelativeLayout>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/sumbit_ratings"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:background="@color/darkorange"
        android:textAllCaps="false"
        android:textAppearance="@style/MediumText"
        android:textStyle="bold"
        android:textSize="@dimen/bottom_botton_text_size"
        android:text="Write Review"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>

