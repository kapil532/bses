<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    card_view:cardCornerRadius="0dp"
    card_view:contentPadding="0dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/close_button"
            android:layout_gravity="right"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_clear_black_24dp"
            android:layout_alignParentRight="true"

            />
        <LinearLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp" >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                style="@style/TextLabel">
                <EditText
                    android:id="@+id/etUserName"
                    android:layout_width="@dimen/edittext_width"
                 android:background="@drawable/edittext_shadow"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:layout_marginTop="@dimen/username_edittext_topmargin"
                    android:drawableLeft="@drawable/ic_account_circle_brand_color_24dp"
                    android:hint="Name"
                    android:imeOptions="actionNext"
                    android:drawablePadding="@dimen/edittext_drawable_padding"
                    android:textSize="@dimen/sign_up_text_size"
                    android:inputType="textPersonName|textCapWords"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#bbbbbb"
                    android:textStyle="normal" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                style="@style/TextLabel">
                <EditText
                    android:id="@+id/etEmail"
                    android:drawablePadding="@dimen/edittext_drawable_padding"
                    android:layout_width="@dimen/edittext_width"
                 android:background="@drawable/edittext_shadow"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    android:textSize="@dimen/sign_up_text_size"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#bbbbbb"
                    android:textStyle="normal" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/TextLabel">
                <EditText
                    android:id="@+id/etCOnfPass"
                    android:layout_width="@dimen/edittext_width"
                 android:background="@drawable/edittext_shadow"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:layout_marginTop="@dimen/margin_top"
                    android:drawableLeft="@drawable/ic_https_black_24dp"
                    android:hint="Password"
                    android:textSize="@dimen/sign_up_text_size"
                    android:drawablePadding="@dimen/edittext_drawable_padding"
                    android:imeOptions="actionNext"
                    android:password="true"

                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#bbbbbb"
                    android:textStyle="normal" />
            </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="@dimen/edittext_width"
            android:layout_height="wrap_content"


            android:orientation="horizontal" >
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight=".75"
                style="@style/TextLabel">

                <EditText
                    android:id="@+id/isd_code"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:backgroundTint="@color/black"
                    android:textSize="@dimen/sign_up_text_size"
                    android:text="+61"
                    android:singleLine="true"
                    android:inputType="text"
                    android:textColor="@color/brandColor"
                    android:textColorHint="#bbbbbb"
                    android:imeOptions="actionNext"
                    android:textStyle="normal" />
              <!--  <View
                    android:layout_width="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/grey_2"/>-->
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight=".25"
                style="@style/TextLabel">

                <EditText
                    android:id="@+id/etMobileNUmber"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_shadow"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:drawablePadding="@dimen/edittext_drawable_padding"
                    android:imeOptions="actionDone"
                    android:textSize="@dimen/sign_up_text_size"
                    android:maxLength="9"
                    android:layout_marginTop="@dimen/margin_top"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:hint="Phone Number"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:textColorHint="#bbbbbb"
                    android:textStyle="normal" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
           <!-- <LinearLayout
                android:layout_width="@dimen/edittext_width"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal" >
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
