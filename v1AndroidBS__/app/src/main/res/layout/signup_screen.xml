            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/TextLabel">

                <EditText
                    android:id="@+id/location"
                    android:layout_width="@dimen/edittext_width"
                    android:layout_height="@dimen/sign_up_edittext_height"
                    android:layout_marginTop="@dimen/margin_top"
                    android:drawableLeft="@drawable/ic_place_black_24dp"
                    android:hint="Location"
                    android:textSize="@dimen/sign_up_text_size"
                    android:padding="@dimen/padding_signup"
                    android:imeOptions="actionNext"
                    android:drawablePadding="@dimen/edittext_drawable_padding"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#bbbbbb"
                    android:visibility="gone"
                    android:textStyle="normal" />
            </android.support.design.widget.TextInputLayout>s


            <LinearLayout
                android:layout_width="wrap_content"

            android:layout_height="wrap_content"
                android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:textColor="#CC000000"
              />

            <TextView
                android:id="@+id/termsOfAgreement"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="I agree to the Terms and Conditions."
                android:textColor="#CC000000"
                />
        </LinearLayout>
            <Button
                android:id="@+id/btnSignUp"
                android:layout_height="@dimen/login_btn_height"
                android:layout_width="250dp"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:background="@color/darkorange"
                android:textAllCaps="false"
                android:textSize="@dimen/login_btn_textsize"
                android:textStyle=""
                android:text="Sign Up" />

            <TextView
                android:layout_width="329dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Account will be verified via your mobile number" />
            <TextView
                android:layout_width="329dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Already have a account? Sign In"
                android:id="@+id/login_page_link" />
            <com.facebook.login.widget.LoginButton
                android:visibility="gone"
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp" />
          <!--  <ImageView
                android:id="@+id/face_book_login"
                android:layout_height="@dimen/login_btn_height"

                android:layout_width="245dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/fb_sign_button" />-->
            <ImageView
                android:id="@+id/face_book_login"
                android:layout_width="255dp"
                android:layout_marginTop="5dp"

                android:layout_height="58dp"
                android:src="@drawable/fb_sign_button" />
        </LinearLayout>
    </RelativeLayout>
