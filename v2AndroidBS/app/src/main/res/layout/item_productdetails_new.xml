                                        android:gravity="left"
                                        android:textColor="@color/brand_text_color"
                                        android:textSize="@dimen/sign_up_text_size"
                                        android:layout_marginRight="20dp"
                                        >
                                    </com.langoor.app.blueshak.text.MyTextView>

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_marginTop="1dp"
                                        android:layout_height="24dp"
                                        android:textSize="@dimen/sign_up_text_size"
                                        android:layout_alignParentRight="true"
                                        android:text="0" android:src="@drawable/ic_brow_arrow"
                                        android:textColor="@color/brand_text_color"
                                        >
                                    </ImageView>
                                </RelativeLayout>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/bottom_bar_background_color"/>

                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="10dp"
                                >
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >

                                    <com.langoor.app.blueshak.text.MyTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="left"
                                        android:layout_gravity="center"

                                        android:textSize="@dimen/sign_up_text_size"
                                        android:text="Negotiable"
                                        android:backgroundTint="@color/brandColor"
                                        android:textColor="@color/brand_text_color" >
                                    </com.langoor.app.blueshak.text.MyTextView>
                                    <Switch
                                        android:layout_width="wrap_content"
                                        android:id="@+id/pd_nagotiable"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:checked="true"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentEnd="true" />
                                </RelativeLayout>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/bottom_bar_background_color"/>
                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="10dp"
                                >
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <com.langoor.app.blueshak.text.MyTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="left"
                                        android:layout_gravity="center"
                                        android:textSize="@dimen/sign_up_text_size"
                                        android:text="Pickup"
                                        android:backgroundTint="@color/brandColor"
                                        android:textColor="@color/brand_text_color">
                                    </com.langoor.app.blueshak.text.MyTextView>
                                    <Switch
                                        android:layout_width="wrap_content"
                                        android:id="@+id/is_new_old"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:checked="true"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentEnd="true" />
                                </RelativeLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/bottom_bar_background_color"/>
                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="10dp"
                                >
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <com.langoor.app.blueshak.text.MyTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="left"
                                        android:layout_gravity="center"

                                        android:textSize="@dimen/sign_up_text_size"
                                        android:text="Shippable"
                                        android:backgroundTint="@color/brandColor"
                                        android:textColor="@color/brand_text_color" >
                                    </com.langoor.app.blueshak.text.MyTextView>
                                    <Switch
                                        android:layout_width="wrap_content"
                                        android:id="@+id/pd_shippable"
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:checked="true"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentEnd="true" />
                                </RelativeLayout>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/bottom_bar_background_color"/>
                            <com.langoor.app.blueshak.view.MultiAutoCompletionView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                 android:textColorHint="@color/brand_text_hint_color"
                                android:textColor="@color/brand_text_color"
                                android:background="@android:drawable/editbox_background_normal"
                                android:layout_margin="5dp"
                                android:textSize="@dimen/sign_up_text_size"
                                android:padding="15dp"
                                android:imeOptions="actionNext"
                                android:singleLine="true"
                                android:visibility="gone"
                                android:hint="Enter a city (eg. Sydney) to select a Zip Code" />
                        </LinearLayout>
