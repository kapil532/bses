<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">-->
    <android.support.v7.widget.CardView
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        card_view:cardPreventCornerOverlap="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="10dp"
        >
    <LinearLayout

        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".80"
            android:id="@+id/profile_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout">
                <RelativeLayout
                    android:id ="@+id/profile_pic_content"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >
                    <ImageView
                        android:id="@+id/sale_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"

                        android:scaleType="fitXY"

                        >
                    </ImageView>



                </RelativeLayout>
                <!--  <com.langoor.app.blueshak.helper.RoundedImageView
                      android:id="@+id/seller_image"
                      android:layout_width="75dp"
                      android:layout_height="75dp"
                      android:layout_centerHorizontal="true"
                      android:scaleType="fitXY"
                      android:layout_centerVertical="true"
                      android:layout_alignParentLeft="true"
                      android:layout_alignParentStart="true"
                      android:src="@drawable/profile_pic" >
                  </com.langoor.app.blueshak.helper.RoundedImageView>-->


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/profile_pic_content"
                    android:layout_toEndOf="@+id/profile_pic_content" >
                    <com.langoor.app.blueshak.text.MyTextViewMediumBold
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="kjhskjsdhkjsdhf sdjhfkjsdhfkjsdhkjsdfh"
                        android:textColor="@color/brand_text_color"
                        android:textSize="@dimen/item_detail_title_text_size"
                        android:id="@+id/sale_name"
                        >
                    </com.langoor.app.blueshak.text.MyTextViewMediumBold>

                    <com.langoor.app.blueshak.text.MyTextViewMediumBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Items"
                        android:textColor="@color/brandColor"
                        android:textSize="14sp"
                        android:id="@+id/sale_items"
                        >
                    </com.langoor.app.blueshak.text.MyTextViewMediumBold>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <ImageView

            android:layout_width="24dp"
            android:layout_marginTop="1dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/profile_text_size"
            android:layout_alignParentRight="true"
            android:id="@+id/go_to_sale_page"
            android:text="0" android:src="@drawable/ic_orange_arrow"
            android:textColor="@color/brand_text_color"
            >
        </ImageView>

    </LinearLayout>

</android.support.v7.widget.CardView>

</RelativeLayout>