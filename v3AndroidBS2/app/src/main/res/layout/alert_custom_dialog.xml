<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/alert_custom_dialog_title_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="gone"
            android:src="@drawable/ic_app_icon"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>
        <com.langoor.app.blueshak.text.MyTextView
            android:id="@+id/alert_custom_dialog_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item numbers"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAppearance="@style/MediumText"
            android:gravity="left"
            android:padding="10dp"
            android:layout_alignBottom="@+id/alert_custom_dialog_title_image"
            android:layout_toRightOf="@+id/alert_custom_dialog_title_image"
            android:layout_toEndOf="@+id/alert_custom_dialog_title_image">
            </com.langoor.app.blueshak.text.MyTextView>
    </RelativeLayout>

    <com.langoor.app.blueshak.text.MyTextView
        android:id="@+id/alert_custom_dialog_description_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure?"
        android:textStyle="normal"
        android:textColor="@color/app_fontBlackColor"
        android:gravity="left"
        android:textSize="16sp"
        android:padding="10dp"
        >
        </com.langoor.app.blueshak.text.MyTextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:weightSum="9">
        <com.langoor.app.blueshak.text.MyButton
            android:id="@+id/alert_custom_dialog_neutralButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textColor="@color/brandColor"
            android:padding="10dp"
            android:textSize="14sp"
            android:text="neutral"
            android:textAllCaps="true"
            android:layout_weight="3"
            android:textStyle="normal"
            >
            </com.langoor.app.blueshak.text.MyButton>
        <com.langoor.app.blueshak.text.MyButton
            android:id="@+id/alert_custom_dialog_cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:padding="10dp"
            android:text="cancel"
            android:textAllCaps="true"
            android:layout_weight="3"
            android:textStyle="normal"
            android:textColor="@color/brandColor"
            android:textSize="14sp"
            >
            </com.langoor.app.blueshak.text.MyButton>
        <com.langoor.app.blueshak.text.MyButton
            android:id="@+id/alert_custom_dialog_okButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:padding="10dp"
            android:text="Yes"
            android:textAllCaps="true"
            android:layout_weight="3"
            android:textStyle="normal"
            android:textColor="@color/brandColor"
            android:textSize="14sp"
            >
            </com.langoor.app.blueshak.text.MyButton>

    </LinearLayout>

</LinearLayout>