<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.langoor.app.blueshak.item.MakeOffersActivty"
    tools:showIn="@layout/activity_make_offers_activty">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/product_image"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true" />
    <com.langoor.app.blueshak.text.MyEditTextView
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_height="50dp"
        android:background="@drawable/text_round_corner"
        android:padding="10dp"
        android:hint="Enter offer"
        android:inputType="number|numberDecimal"
        android:maxLength="9"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:id="@+id/offer_price"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        </com.langoor.app.blueshak.text.MyEditTextView>
    <android.support.v7.widget.CardView
        card_view:cardPreventCornerOverlap="false"
        app:contentPadding="5dp"
        android:layout_width="match_parent"
        android:gravity="bottom|right"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        card_view:cardCornerRadius="2dp"
        app:cardElevation="3dp"
        android:id="@+id/user_commu_content"
        >
        <com.langoor.app.blueshak.text.MyButton
            android:id="@+id/make_offer_"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/login_btn_textsize"
            android:textAllCaps="false"
            android:background="@drawable/round_corner_btn__style"
            android:text="Make offer"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" >
        </com.langoor.app.blueshak.text.MyButton>

    </android.support.v7.widget.CardView>

    <com.langoor.app.blueshak.text.MyTextViewMediumBold
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Enetr your offer for Reduce sound proof European 95 block out Bike"
        android:id="@+id/offer_text"
        android:layout_below="@+id/offer_price"
        android:layout_centerHorizontal="true" >
        </com.langoor.app.blueshak.text.MyTextViewMediumBold>
    <fr.castorflex.android.circularprogressbar.CircularProgressBar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        app:cpb_color="#F00"
        app:cpb_colors="@array/color_array"
        app:cpb_max_sweep_angle="300"
        app:cpb_min_sweep_angle="10"
        app:cpb_rotation_speed="1.0"
        android:visibility="gone"
        android:padding="10dp"
        app:cpb_stroke_width="4dp"
        android:background="@drawable/bg_circle_unread_count"
        app:cpb_sweep_speed="1.0"
        android:id="@+id/progress_bar"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/tab_selected"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
